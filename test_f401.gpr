project Test_F401 is

   for Languages use ("Ada", "ASM_CPP"); -- ASM_CPP to compile the startup code
   for Source_Dirs use ("src", "svd");
   for Object_Dir use "obj";
   for Main use ("test_f401.adb");
   for Target use "arm-eabi";

   --  generic ZFP run-time compatible with our MCU
   for Runtime ("ada") use "zfp-cortex-m4f";

   package Linker is
      --  Linker script generated by startup-gen
      for Switches ("Ada") use ("-T", project'Project_Dir & "/src/link.ld");
   end Linker;

   package Device_Configuration is
   end Device_Configuration;

   package Ide is
      for Connection_Tool use "openocd";
      for Connection_Config_File use "openocd.cfg";
      for Communication_Protocol use "remote";
      for Program_Host use "localhost:4242";
   end Ide;

   package Compiler is
      for Switches ("ada") use ("-g");
   end Compiler;

end Test_F401;

